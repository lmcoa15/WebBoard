<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PostMapper">
	<select id="findAll" resultType="github.lmcoa15.webboard.dto.User">
		select 
		  userId AS id,
		  email As email,
		  pass AS password
		from users;
	</select>
	
	<select id="find" parameterType="int" resultType="github.lmcoa15.webboard.dto.User">
		select 
		  *
		from post
		where seq = #{seq}
	</select>
	
	<select id="login" parameterType="map" resultType="github.lmcoa15.webboard.dto.User">
		select 
		  userId AS id,
		  pass AS password
		from users
		where id = #{userId} and pass=#{password}
	</select>
	
	<insert id="write" parameterType="map">
		insert into post ('title','date','writer','contents','counts','category')
		values(#{})
	</insert>
	
	<delete id="delete" parameterType="int">
		delete from post where seq = #{seq}
	</delete>
</mapper>